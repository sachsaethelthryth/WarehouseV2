<Window x:Class="WarehouseManagementApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="250" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="111*" />
            <ColumnDefinition Width="215*"/>
        </Grid.ColumnDefinitions>

        <!-- Логин -->
        <TextBlock Text="Логин:" Grid.Column="0" VerticalAlignment="Top" Margin="0,1,10,0" Grid.Row="1" />
        <TextBox x:Name="UsernameTextBox" Grid.Row="1" Grid.Column="1" Margin="0,0,10,10" Grid.ColumnSpan="2" />

        <!-- Пароль -->
        <TextBlock Text="Пароль:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Margin="0,1,10,0" />
        <PasswordBox x:Name="PasswordBox" Grid.Row="2" Grid.Column="1" Margin="0,0,10,169" Grid.ColumnSpan="2" />

        <!-- Кнопки -->
        <Button Content="Войти" Grid.Row="2" Grid.Column="1" Margin="64,93,0,59" Click="LoginButton_Click" HorizontalAlignment="Left" Width="143" Grid.ColumnSpan="2" />
        <Button Content="Отмена" Grid.Row="2" Grid.Column="1" Margin="64,140,0,12" HorizontalAlignment="Left" Click="CancelButton_Click" Width="143" Grid.ColumnSpan="2" />
        <Image Margin="-6,95,51,0" Source="/SKLAD.png" Stretch="Fill" Grid.Row="2" Grid.ColumnSpan="2"/>
        <Image Margin="66,26,119,98" Source="/SKLAD.png" Stretch="Fill" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</Window>