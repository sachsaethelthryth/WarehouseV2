<Window x:Class="WarehouseManagementApp.AddCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить категорию" Height="200" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Название категории -->
        <TextBlock Text="Название категории:" Grid.Row="0" Grid.Column="0" Margin="5"/>
        <TextBox x:Name="CategoryNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <!-- Кнопки -->
        <Button Content="Добавить" Grid.Row="1" Grid.Column="0" Margin="5" HorizontalAlignment="Right" Click="SaveButton_Click"/>
        <Button Content="Отмена" Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Left" Click="CancelButton_Click"/>
    </Grid>
</Window>
